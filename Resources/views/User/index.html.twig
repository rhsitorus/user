{% extends 'RofilTemplateMasterBundle:Theme:two-column.html.twig' %}
{% block content -%}
    <h2>Daftar User</h2>
    <hr>
                    <a href="{{ path('manage_user_new') }}" class="btn btn-primary">Tambah Data</a>
            <hr>

    <div class="panel panel-default">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Username</th>
                    <th>Password</th>
                    <th>Role</th>
                    <th>Actived</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for entity in entities %}
                <tr>
                    <td><a href="{{ path('manage_user_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                    <td>{{ entity.username }}</td>
                    <td>{{ entity.password }}</td>
                    <td>{{ entity.role }}</td>
                    <td>{{ entity.actived }}</td>
                    <td>
		                <ul>
		                    <li>
		                        <a href="{{ path('manage_user_show', { 'id': entity.id }) }}">show</a>
		                    </li>
		                    <li>
		                        <a href="{{ path('manage_user_edit', { 'id': entity.id }) }}">edit</a>
		                    </li>
		                </ul>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    
{% endblock %}
