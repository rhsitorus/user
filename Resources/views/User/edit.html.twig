    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">Anda yakin mau menghapus data ? </h4>
      </div>
            <div class="modal-footer text-center">
        <div class="col-md-6 text-left"><button type="button" class="btn btn-default" data-dismiss="modal">No</button></div>
        <div class="col-md-6">{{ form(delete_form) }}</div>
      </div>
    </div>
  </div>
</div>

    <hr>

    {{ form(edit_form) }}

{% endblock %}
