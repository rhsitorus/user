{% extends ':Theme:two-column.html.twig' %}

{% block content -%}
    <h2>Ubah User</h2>
    <hr>
	    	    <div class="row">
    <div class="col-md-6">
        <a href="{{ path('manage_user') }}" class="btn btn-info">Kembali Kedaftar</a>
    </div>
    <div class="col-md-6 text-right">
                                                <button class="btn btn-danger" data-toggle="modal" data-target="#modalHapus">
